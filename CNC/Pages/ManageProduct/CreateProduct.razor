                        <label class="control-label col-md-2">Price Product</label>
                        <div class="col-md-3">
                            <InputNumber @bind-Value="_product.Price" class="form-control" />
                            <ValidationMessage For="(() => _product.Price)" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Description</label>
                        <div class="col-md-3">
                            <InputText class="form-control" @bind-Value="_product.Description" />
                            <ValidationMessage For="(() => _product.Description)" />
                        </div>
